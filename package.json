{
  "private": false,
  "name": "@dougkulak/dts-bundle",
  "version": "1.0.0",
  "description": "Export TypeScript .d.ts files as an external module definition",
  "author": "Doug Kulak <dougkulak@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "docs": "mkdir -p docs && cp ./README.md ./docs/README.md",
    "build": "npm run docs",
    "test": "grunt test",
    "postupdate": "npm i && npm shrinkwrap && npm audit fix && npm run test"
  },
  "keywords": [
    "typescript",
    "definition",
    "bundle",
    "export",
    "d.ts"
  ],
  "bin": {
    "dts-bundle": "./lib/dts-bundle.js"
  },
  "homepage": "https://github.com/dougkulak/dts-bundle",
  "repository": {
    "type": "git",
    "url": "https://github.com/dougkulak/dts-bundle.git"
  },
  "bugs": {
    "url": "https://github.com/dougkulak/dts-bundle/issues"
  },
  "engines": {
    "node": ">= 12"
  },
  "main": "./index.js",
  "dependencies": {
    "@types/glob": "7.1.4",
    "@types/mkdirp": "1.0.2",
    "@types/node": "16.7.1",
    "commander": "^9.4.0",
    "detect-indent": "^6.1.0",
    "glob": "^7.1.7",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "chai-fs": "2.0.0",
    "grunt": "1.4.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-jshint": "^3.0.0",
    "grunt-mocha-cli": "^7.0.0",
    "grunt-mocha-test": "^0.13.3",
    "grunt-ts": "^6.0.0-beta.22",
    "jshint-path-reporter": "^0.1.3",
    "ncp": "^2.0.0",
    "typescript": "^4.3.5"
  }
}
